model AnggotaKeluarga {
  id        String   @id @default(uuid())
  surveiId  String
  survei    Survei   @relation(fields: [surveiId], references: [id], onDelete: Cascade)

  blok3     Blok3?
  blok4     Blok4?
  blok5     Blok5?
  blok6     Blok6?
  blok7     Blok7?
}

