datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Survei {
  id                             String   @id @default(uuid())
  createdAt                      DateTime @default(now())

  // Kode Wilayah
  kode_provinsi                  Int      // 2 digit
  kode_kabupaten                 Int      // 2 digit
  kode_kecamatan                 Int      // 3 digit
  kode_desa                      Int      // 3 digit

  // Blok 1
  101_namaKepalaKeluarga         String
  102_jumlahKK                   Int
  103_jumlahAnggotaKeluarga     Int
  104_nomorKK                   BigInt
  105_kodeKK                    BigInt

  // Blok 2
  201_namaRT                     String
  202_nomorUrutBangunan          Int
  203_nomorUrutKeluarga          Int
  204_alamatLengkap              String
  205_statusKependudukan         Int

  // Blok 10
  1001_catatan                   String?

  // Relasi
  blok8                          Blok8?
  blok9                          Blok9?
  anggotaKeluarga               AnggotaKeluarga[]
}

model Blok8 {
  id                             String   @id @default(uuid())
  surveiId                       String   @unique
  survei                         Survei   @relation(fields: [surveiId], references: [id])

  801_statusKepemilikanBangunan  Int
  802_luasLantai                 Int
  803_jenisLantai                Int
  804_jenisDinding               Int
  805_jenisAtap                  Int
